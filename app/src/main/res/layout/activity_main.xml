<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNagy"
        android:text="Nagy Betüs szöveg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonKis"
        android:text="Nis Betüs szöveg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonNagy"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSzin"
        android:text="Veletlen Szin generálás"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonKis"

        />
    <TextView
        android:id="@+id/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSzin"
        android:textSize="30sp"
        android:textAlignment="center"
        />
</RelativeLayout>